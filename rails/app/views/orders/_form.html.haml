= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :branch
    = f.text_field :branch
  .field
    = f.label :customer
    = f.text_field :customer
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
