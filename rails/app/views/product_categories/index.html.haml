%h1 Listing product_categories

%table
  %thead
    %tr
      %th Name
      %th Description
      %th
      %th
      %th

  %tbody
    - @product_categories.each do |product_category|
      %tr
        %td= product_category.name
        %td= product_category.description
        %td= link_to 'Show', product_category
        %td= link_to 'Edit', edit_product_category_path(product_category)
        %td= link_to 'Destroy', product_category, :method => :delete, :data => { :confirm => 'Are you sure?' }

